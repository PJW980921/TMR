{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "composite": true,
    "declaration": true
  },
  "include": ["packages/**/*"],
  "references": [
    { "path": "/packages/tmr-backend" },
    { "path": "/packages/tmr-frontend" }
  ]
}
